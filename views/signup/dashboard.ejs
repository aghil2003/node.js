  <div class="admin-title">
    <h2>Posts</h2>
    <a href="https://node-js-8vf5.onrender.com/new-post" class="button">+ Add New</a>
  </div>
  
  <div class="admin-posts-container">
    <div class="admin-posts">
      <% data.forEach(post => { %>
        <div class="post-card">
          <div class="imgDiv">
            <img src="\img\smiley-woman-with-headphones-working-laptop 1.png">
          </div>
          <h3 class="post-title"><%= post.title %></h3>
          <div class="admin-post-controls">
            <a href="/post/<%= post._id %>" class="btn btn-view">View</a>
            <a href="/post-edit/<%= post._id %>" class="btn btn-edit">Edit</a>
            <button class="btn btn-delete" data-id="<%= post._id %>">Delete</button>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
  <!-- Confirmation Modal -->
  <div id="confirmationModal" class="modal hidden">
    <div class="modal-content">
      <h2>Are you sure you want to delete this post?</h2>
      <button id="confirmDelete" class="btn btn-confirm">Yes</button>
      <button id="cancelDelete" class="btn btn-cancel">No</button>
    </div>
  </div>
  
  <!-- Success Modal -->
  <div id="successModal" class="modal hidden">
    <div class="modal-content">
      <h2>Post deleted successfully!</h2>
      <button id="closeSuccess" class="btn btn-close">OK</button>
    </div>
  </div>
  
  <script src="/public/js/script.js"></script>
  